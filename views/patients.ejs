<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patients - RehabPlus System</title>
    
    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#667eea">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Design System -->
    <link href="/public/css/variables.css" rel="stylesheet">
    <link href="/public/css/base.css" rel="stylesheet">
    <link href="/public/css/accessibility.css" rel="stylesheet">
    
    <style>
        /* --- DASHBOARD THEME VARIABLES --- */
        :root {
            --primary-gradient: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            --surface-color: #ffffff;
            --background-color: #f3f4f6;
            --text-main: #1f2937;
            --text-secondary: #6b7280;
            --border-radius-md: 12px;
            --border-radius-sm: 8px;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            
            /* Legacy overrides for Patients */
            --theme-primary: #6366f1;
            --theme-secondary: #8b5cf6;
            --input-bg: #f8fafc;
        }

        body {
            background-color: #f0f2f5; /* Matches dashboard.ejs exactly */
            font-family: 'Plus Jakarta Sans', sans-serif;
            color: var(--text-main);
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* --- MAIN LAYOUT --- */
        main {
            padding-top: 1.5rem;
            padding-bottom: 2rem;
        }

        /* --- PAGE HEADER (Dashboard Style) --- */
        .page-header {
            background: var(--surface-color);
            border-radius: var(--border-radius-md);
            padding: 0.8rem 1.2rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow-sm);
            border: 1px solid rgba(255,255,255,0.5);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .page-header h1 {
            font-weight: 800;
            font-size: 1.4rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 0;
        }

        .page-header .subtitle {
            color: var(--text-secondary);
            font-size: 0.8rem;
            font-weight: 600;
        }

        /* --- CARDS --- */
        .content-card {
            background: var(--surface-color);
            border-radius: var(--border-radius-md);
            border: 1px solid rgba(229, 231, 235, 0.8);
            box-shadow: var(--shadow-sm);
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        /* Patient Cards (Generated by JS) */
        .patient-card {
            background: var(--surface-color);
            border: 1px solid rgba(229, 231, 235, 0.6);
            border-radius: var(--border-radius-md);
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
            box-shadow: var(--shadow-sm);
            overflow: hidden;
            height: 100%;
            position: relative;
        }

        .patient-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--primary-gradient);
            opacity: 0;
            transition: opacity 0.3s;
        }

        .patient-card:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-md);
        }

        .patient-card:hover::before {
            opacity: 1;
        }

        /* --- FORM CONTROLS --- */
        .form-floating > .form-control, 
        .form-floating > .form-select {
            background-color: var(--input-bg);
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 0.95rem;
        }

        .form-control:focus, .form-select:focus {
            background-color: #fff;
            border-color: var(--theme-primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        }
        
        .form-floating > label {
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

        /* --- BUTTONS --- */
        .btn {
            border: none;
            font-weight: 600;
            border-radius: 6px;
            box-shadow: var(--shadow-sm);
            transition: all 0.2s ease;
        }

        .btn-primary {
            background: var(--primary-gradient);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
            color: white;
        }
        
        .btn-light {
            background: #fff;
            color: var(--text-main);
            border: 1px solid #e5e7eb !important;
        }

        .btn-group .btn {
            border-radius: 6px;
            margin: 0 2px;
        }

        /* --- MODALS --- */
        .modal-content {
            border: none;
            border-radius: 16px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            overflow: hidden;
        }

        .modal-header {
            background: var(--primary-gradient);
            color: white;
            border-bottom: none;
            padding: 1rem 1.5rem;
        }
        
        .modal-header .btn-close-white {
            filter: brightness(0) invert(1);
            opacity: 0.8;
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-footer {
            border-top: 1px solid #f3f4f6;
            padding: 1rem 1.5rem;
            background: #f9fafb;
        }

        /* --- PAGINATION --- */
        .pagination .page-link {
            border: none;
            color: var(--text-secondary);
            border-radius: 6px;
            margin: 0 2px;
            font-weight: 600;
            font-size: 0.85rem;
            min-width: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .pagination .page-item.active .page-link {
            background: var(--primary-gradient);
            color: white;
            box-shadow: 0 2px 4px rgba(99, 102, 241, 0.3);
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>
    
    <a href="#main-content" class="skip-link d-none">Skip to main content</a>

    <!-- Mobile navbar toggle (Matched to Dashboard) -->
    <nav class="navbar navbar-dark bg-dark d-md-none">
        <div class="container-fluid">
            <span class="navbar-brand font-weight-bold">RehabPlus</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('partials/sidebar', { user, activePage: 'patients' }) %>

            <!-- Main content -->
            <main id="main-content" class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                
                <!-- Page Header (Dashboard Style) -->
                <div class="page-header flex-column flex-md-row">
                    <div>
                        <h1 class="h2">Patient Directory</h1>
                        <span class="subtitle">Manage records, treatments, and history</span>
                    </div>
                    <!-- Added flex-wrap for responsiveness on mobile -->
                    <div class="d-flex flex-wrap gap-2 mt-3 mt-md-0 align-items-center justify-content-start justify-content-md-end">
                        <!-- View Switcher -->
                        <div class="btn-group shadow-sm" role="group" aria-label="View Toggle">
                            <input type="radio" class="btn-check" name="viewToggle" id="viewGrid" autocomplete="off" checked>
                            <label class="btn btn-light" for="viewGrid" onclick="toggleView('grid')" title="Grid View">
                                <i class="bi bi-grid-fill text-primary"></i>
                            </label>
                            
                            <input type="radio" class="btn-check" name="viewToggle" id="viewList" autocomplete="off">
                            <label class="btn btn-light" for="viewList" onclick="toggleView('list')" title="List View">
                                <i class="bi bi-list-ul text-primary"></i>
                            </label>
                        </div>

                        <div class="btn-group shadow-sm" role="group">
                            <button type="button" class="btn btn-light" onclick="downloadCSVTemplate()">
                                <i class="bi bi-file-earmark-spreadsheet me-2 text-success"></i>Template
                            </button>
                            <button type="button" class="btn btn-light" onclick="showImportModal()">
                                <i class="bi bi-cloud-upload me-2 text-primary"></i>Import
                            </button>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="location.href='/patient/register'">
                            <i class="bi bi-person-plus-fill me-2"></i>New Patient
                        </button>
                    </div>
                </div>

                <!-- Search & Filter Box -->
                <div class="content-card mb-4">
                    <div class="row g-2 align-items-stretch">
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="searchHN" placeholder="Search by HN">
                                <label for="searchHN"><i class="bi bi-hash me-1"></i> Search by HN</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="searchName" placeholder="Search by Name">
                                <label for="searchName"><i class="bi bi-person me-1"></i> Search by Name</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating">
                                <select class="form-select" id="filterClinic">
                                    <option value="">All Clinics</option>
                                </select>
                                <label for="filterClinic"><i class="bi bi-building me-1"></i> Filter by Clinic</label>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <button class="btn btn-primary w-100 h-100 d-flex align-items-center justify-content-center p-0" onclick="searchPatients()" aria-label="Search patients">
                                <i class="bi bi-search fs-5"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Grid View (Default) -->
                <div class="row g-3" id="patientsGrid">
                    <div class="col-12 text-center py-5">
                        <div class="spinner-border text-primary" role="status" style="width: 2.5rem; height: 2.5rem;">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="text-muted mt-3 small fw-bold">Loading patient records...</p>
                    </div>
                </div>

                <!-- List View (Table - Hidden by default) -->
                <div id="patientsList" class="d-none">
                    <div class="card border-0 shadow-sm overflow-hidden" style="border-radius: 12px;">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4 py-3 text-secondary text-uppercase small fw-bold">Patient Name</th>
                                        <th class="py-3 text-secondary text-uppercase small fw-bold">HN</th>
                                        <th class="py-3 text-secondary text-uppercase small fw-bold">Clinic</th>
                                        <th class="py-3 text-secondary text-uppercase small fw-bold">Contact</th>
                                        <th class="text-end pe-4 py-3 text-secondary text-uppercase small fw-bold">Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="patientsTableBody">
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            <i class="bi bi-info-circle me-2"></i> Initializing list view...
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                <nav class="mt-4 mb-5">
                    <!-- Added flex-wrap for mobile responsiveness -->
                    <ul class="pagination justify-content-center flex-wrap" id="pagination">
                        <!-- JS will populate this -->
                    </ul>
                </nav>
            </main>
        </div>
    </div>

    <!-- Import CSV Modal -->
    <div class="modal fade" id="importCSVModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold"><i class="bi bi-cloud-upload-fill me-2"></i>Import Patients</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-light border-start border-4 border-info shadow-sm rounded-3">
                        <div class="d-flex">
                            <i class="bi bi-info-circle-fill text-info fs-5 me-3"></i>
                            <div>
                                <strong class="small text-uppercase text-muted">How to Import</strong>
                                <ul class="mb-0 mt-1 ps-3 small text-muted">
                                    <li>Download the CSV template first.</li>
                                    <li>Fill in patient data (one patient per row).</li>
                                    <li>Save the file and upload it below.</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-4 mt-4">
                        <label class="form-label fw-bold small text-uppercase text-secondary">Select CSV File</label>
                        <input type="file" class="form-control" id="csvFileInput" accept=".csv">
                    </div>

                    <div id="import-progress" class="d-none">
                        <div class="progress" style="height: 8px; border-radius: 4px;">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: 0%"></div>
                        </div>
                        <p class="text-center mt-2 mb-0 small fw-bold text-success" id="import-status">Processing...</p>
                    </div>
                    
                    <div id="import-results" class="mt-3"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary px-4" onclick="uploadCSV()" id="btn-upload">
                        <i class="bi bi-upload me-2"></i> Upload & Import
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/public/js/utils.js?v=1765446492000"></script>
    <script src="/public/js/accessibility.js?v=1765446492000"></script>
    
    <!-- Custom script to sync Grid and List views -->
    <script>
        // Store current patients to sync views
        let currentPatientsData = [];

        // Intercept standard fetch calls to capture patient data
        // This ensures List View stays in sync with Grid View pagination/search
        const originalFetch = window.fetch;
        window.fetch = async function(...args) {
            const response = await originalFetch(...args);
            
            // Only clone and process if it looks like a patient search/list API call
            const url = args[0] ? args[0].toString() : '';
            if (url.includes('/api/patients')) {
                // Clone response to read it without consuming the main stream
                const clone = response.clone();
                clone.json().then(data => {
                    // Handle various API response structures
                    if (Array.isArray(data)) {
                        currentPatientsData = data;
                    } else if (data.data && Array.isArray(data.data)) {
                        currentPatientsData = data.data; // Standard pagination wrapper
                    } else if (data.patients && Array.isArray(data.patients)) {
                        currentPatientsData = data.patients; // Alternative wrapper
                    }
                    
                    // If List View is active, render immediately
                    const listView = document.getElementById('patientsList');
                    if (listView && !listView.classList.contains('d-none')) {
                        renderListView();
                    }
                }).catch(err => console.log('Background view sync skipped:', err));
            }
            
            return response;
        };

        function toggleView(viewType) {
            const gridView = document.getElementById('patientsGrid');
            const listView = document.getElementById('patientsList');
            
            if (viewType === 'list') {
                gridView.classList.add('d-none');
                listView.classList.remove('d-none');
                renderListView();
            } else {
                gridView.classList.remove('d-none');
                listView.classList.add('d-none');
            }
        }

        function renderListView() {
            const tbody = document.getElementById('patientsTableBody');
            
            if (!currentPatientsData || currentPatientsData.length === 0) {
                 // Try to check if initial load is still happening or truly empty
                 const gridContent = document.getElementById('patientsGrid').innerText;
                 if(gridContent.includes('Loading')) {
                     tbody.innerHTML = '<tr><td colspan="5" class="text-center py-5"><div class="spinner-border text-primary spinner-border-sm me-2"></div>Syncing data...</td></tr>';
                 } else {
                     tbody.innerHTML = '<tr><td colspan="5" class="text-center py-5 text-muted">No patients found on this page.</td></tr>';
                 }
                 return;
            }

            tbody.innerHTML = currentPatientsData.map(p => {
                // Robust Name Handling
                let patientName = 'Unknown Patient';
                
                if (p.name) patientName = p.name;
                else if (p.fullName) patientName = p.fullName;
                else if (p.first_name) patientName = `${p.first_name} ${p.last_name || ''}`;
                else if (p.firstName) patientName = `${p.firstName} ${p.lastName || ''}`;
                
                patientName = patientName.trim() || 'Unknown Patient';

                return `
                <tr>
                    <td class="ps-4">
                        <div class="fw-bold text-dark mb-1">${patientName}</div>
                        <small class="text-muted d-flex align-items-center gap-2">
                            ${p.gender ? `<span class="badge bg-light text-secondary border fw-normal" style="font-size: 0.7rem;">${p.gender}</span>` : ''} 
                            ${calculateAge(p.dob) !== '-' ? `<span style="font-size: 0.75rem;">${calculateAge(p.dob)} yrs</span>` : ''}
                        </small>
                    </td>
                    <td><span class="badge bg-light text-dark border font-monospace">${p.hn || 'N/A'}</span></td>
                    <td><span class="badge bg-secondary bg-opacity-10 text-secondary border border-secondary border-opacity-10">${p.clinic || 'General'}</span></td>
                    <td>
                        <div class="d-flex flex-column small">
                            <span class="text-dark"><i class="bi bi-telephone me-1 text-muted"></i> ${p.phone || '-'}</span>
                            ${p.email ? `<span class="text-muted"><i class="bi bi-envelope me-1"></i> ${p.email}</span>` : ''}
                        </div>
                    </td>
                    <td class="text-end pe-4">
                        <button class="btn btn-sm btn-white border shadow-sm text-primary fw-bold" onclick="location.href='/patient/${p.id}'">
                            View Profile
                        </button>
                    </td>
                </tr>
            `}).join('');
        }

        function calculateAge(dob) {
            if (!dob) return '-';
            const diff = Date.now() - new Date(dob).getTime();
            return Math.floor(diff / (1000 * 60 * 60 * 24 * 365.25));
        }
    </script>
    
    <!-- Load patients.js AFTER setting up the interceptor -->
    <script src="/public/js/patients.js?v=1765446492000"></script>
</body>
</html>