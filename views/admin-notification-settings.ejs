        async function loadSMSTemplate() {
            try {
                const response = await apiGet('/api/admin/sms-template');
                const template = response.template || DEFAULT_SMS_TEMPLATE;
                document.getElementById('smsTemplate').value = template;
                updateSMSCharCount();
                updateSMSPreview();
            } catch (error) {
                // If no template exists, use default
                document.getElementById('smsTemplate').value = DEFAULT_SMS_TEMPLATE;
                updateSMSCharCount();
                updateSMSPreview();
            }
        }

        async function saveSMSTemplate() {
            try {
                const template = document.getElementById('smsTemplate').value;
                await apiPost('/api/admin/sms-template', { template });
                showAlert('SMS template saved successfully!', 'success');
            } catch (error) {
                console.error('Error saving SMS template:', error);
                showAlert(error.message || 'Failed to save SMS template', 'danger');
            }
        }

        function resetSMSTemplate() {
            if (confirm('Reset to default template? This will discard your custom template.')) {
                document.getElementById('smsTemplate').value = DEFAULT_SMS_TEMPLATE;
                updateSMSCharCount();
                updateSMSPreview();
            }
        }

        function updateSMSCharCount() {
            const template = document.getElementById('smsTemplate').value;
            document.getElementById('smsCharCount').textContent = template.length;
        }

        function updateSMSPreview() {
            const template = document.getElementById('smsTemplate').value;
            const preview = template
                .replace(/{clinicName}/g, 'LANTAVAFIX')
                .replace(/{patientName}/g, 'John Doe')
                .replace(/{date}/g, '12/12/2025')
                .replace(/{startTime}/g, '14:00')
                .replace(/{endTime}/g, '15:00')
                .replace(/{ptName}/g, 'Dr. Smith')
                .replace(/{appointmentType}/g, 'Treatment Session');
            document.getElementById('smsPreview').textContent = preview;
        }

        // Add event listeners for SMS template
        document.addEventListener('DOMContentLoaded', function() {
            const smsTemplateInput = document.getElementById('smsTemplate');
            if (smsTemplateInput) {
                smsTemplateInput.addEventListener('input', function() {
                    updateSMSCharCount();
                    updateSMSPreview();
                });
                loadSMSTemplate();
            }
        });

        // Google Calendar Settings Functions
        async function loadGoogleCalendarSettings() {
            try {
                const settings = await apiGet('/api/admin/notification/google-calendar');
                populateGoogleCalendarForm(settings);
            } catch (error) {
                if (error.message && (error.message.includes('404') || error.message.includes('Not Found'))) {
                    console.log('No Google Calendar settings found, using defaults');
                } else {
                    console.error('Error loading Google Calendar settings:', error);
                    showAlert('Failed to load Google Calendar settings: ' + error.message, 'danger');
                }
            }
        }

        function populateGoogleCalendarForm(settings) {
            if (!settings) return;
            document.getElementById('gcalEnabled').value = settings.enabled || '0';
            document.getElementById('gcalServiceAccountEmail').value = settings.serviceAccountEmail || '';
            document.getElementById('gcalPrivateKey').value = settings.privateKey || '';
            document.getElementById('gcalCalendarId').value = settings.calendarId || '';
            document.getElementById('gcalTimeZone').value = settings.timeZone || 'Asia/Bangkok';
            document.getElementById('gcalImpersonateUser').value = settings.impersonateUser || '';
            document.getElementById('gcalSendInvites').value = settings.sendInvites || '0';
            updateStatusBadge('gcal', settings.enabled === 1 || settings.enabled === '1');
        }

        async function saveGoogleCalendarSettings() {
            try {
                const settings = {
                    enabled: parseInt(document.getElementById('gcalEnabled').value),
                    serviceAccountEmail: document.getElementById('gcalServiceAccountEmail').value.trim(),
                    privateKey: document.getElementById('gcalPrivateKey').value.trim(),
                    calendarId: document.getElementById('gcalCalendarId').value.trim(),
                    timeZone: document.getElementById('gcalTimeZone').value,
                    impersonateUser: document.getElementById('gcalImpersonateUser').value.trim(),
                    sendInvites: parseInt(document.getElementById('gcalSendInvites').value)
                };
                if (settings.enabled === 1) {
                    if (!settings.serviceAccountEmail || !settings.privateKey || !settings.calendarId) {
                        showAlert('Please fill in all required fields (Service Account Email, Private Key, Calendar ID)', 'warning');
                        return;
                    }
                    if (!validateEmail(settings.serviceAccountEmail)) {
                        showAlert('Please enter a valid service account email address', 'warning');
                        return;
                    }
                    if (settings.impersonateUser && !validateEmail(settings.impersonateUser)) {
                        showAlert('Please enter a valid impersonate user email address', 'warning');
                        return;
                    }
                }
                await apiPost('/api/admin/notification/google-calendar', settings);
                showAlert('Google Calendar settings saved successfully', 'success');
                updateStatusBadge('gcal', settings.enabled === 1);
            } catch (error) {
                console.error('Error saving Google Calendar settings:', error);
                showAlert(error.message || 'Failed to save Google Calendar settings', 'danger');
            }
        }

        async function testGoogleCalendar() {
            try {
                showAlert('Testing Google Calendar connection...', 'info');
                await apiPost('/api/admin/notification/google-calendar/test', {});
                showAlert('Google Calendar connection test successful!', 'success');
            } catch (error) {
                console.error('Error testing Google Calendar:', error);
                showAlert(error.message || 'Failed to connect to Google Calendar. Please check your settings.', 'danger');
            }
        }
