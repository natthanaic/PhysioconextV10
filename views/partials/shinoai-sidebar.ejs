<script>
// Toggle ShinoAI Sidebar
function toggleShinoAI() {
    const sidebar = document.getElementById('shinoaiSidebar');
    sidebar.classList.toggle('collapsed');

    // Focus input when opening
    if (!sidebar.classList.contains('collapsed')) {
        setTimeout(() => {
            document.getElementById('shinoaiInput').focus();
        }, 300);
    }
}

// Handle textarea auto-resize
document.addEventListener('DOMContentLoaded', function() {
    const textarea = document.getElementById('shinoaiInput');
    if (textarea) {
        textarea.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 120) + 'px';
        });
    }
});

// Handle Enter key (send) and Shift+Enter (new line)
function handleShinoAIKeydown(event) {
    if (event.key === 'Enter' && !event.shiftKey) {
        event.preventDefault();
        document.getElementById('shinoaiForm').dispatchEvent(new Event('submit'));
    }
}

// Ask quick question
function askShinoAI(question) {
    document.getElementById('shinoaiInput').value = question;
    sendShinoAIMessage(new Event('submit'));
}

// Send message to ShinoAI
async function sendShinoAIMessage(event) {
    event.preventDefault();

    const input = document.getElementById('shinoaiInput');
    const message = input.value.trim();

    if (!message) return;

    // Add user message to chat
    addMessageToChat('user', message);

    // Clear input
    input.value = '';
    input.style.height = 'auto';

    // Show typing indicator
    const typingId = addTypingIndicator();

    // Disable send button
    const sendBtn = document.getElementById('shinoaiSendBtn');
    sendBtn.disabled = true;

    try {
        // Send to backend
        const response = await fetch('/api/shinoai/chat', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ message })
        });

        if (!response.ok) {
            throw new Error('Failed to get AI response');
        }

        const data = await response.json();

        // Remove typing indicator
        removeTypingIndicator(typingId);

        // Add AI response to chat
        addMessageToChat('assistant', data.response);

    } catch (error) {
        console.error('ShinoAI Error:', error);
        removeTypingIndicator(typingId);
        addMessageToChat('assistant', '‚ùå Sorry, I encountered an error. Please try again.');
    } finally {
        sendBtn.disabled = false;
    }
}

// Add message to chat
function addMessageToChat(role, content) {
    const messagesContainer = document.getElementById('shinoaiMessages');

    const messageDiv = document.createElement('div');
    messageDiv.className = `shinoai-message ${role}`;

    const avatarIcon = role === 'user' ? 'bi-person-circle' : 'bi-robot';

    messageDiv.innerHTML = `
        <div class="message-avatar">
            <i class="bi ${avatarIcon}"></i>
        </div>
        <div class="message-content">
            <div class="message-bubble">
                ${formatMessage(content)}
            </div>
        </div>
    `;

    messagesContainer.appendChild(messageDiv);

    // Scroll to bottom
    messagesContainer.scrollTop = messagesContainer.scrollHeight;
}

// Format message (convert markdown-like syntax)
function formatMessage(text) {
    // Convert newlines to <br>
    let formatted = text.replace(/\n/g, '<br>');

    // Convert **bold**
    formatted = formatted.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');

    // Convert *italic*
    formatted = formatted.replace(/\*(.*?)\*/g, '<em>$1</em>');

    // Convert lists
    formatted = formatted.replace(/^- (.+)$/gm, '<li>$1</li>');
    if (formatted.includes('<li>')) {
        formatted = formatted.replace(/(<li>.*<\/li>)/s, '<ul>$1</ul>');
    }

    return `<p class="mb-0">${formatted}</p>`;
}

// Add typing indicator
function addTypingIndicator() {
    const messagesContainer = document.getElementById('shinoaiMessages');

    const typingDiv = document.createElement('div');
    typingDiv.className = 'shinoai-message assistant';
    typingDiv.id = 'typing-indicator-' + Date.now();

    typingDiv.innerHTML = `
        <div class="message-avatar">
            <i class="bi bi-robot"></i>
        </div>
        <div class="message-content">
            <div class="message-bubble">
                <div class="typing-indicator">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
    `;

    messagesContainer.appendChild(typingDiv);
    messagesContainer.scrollTop = messagesContainer.scrollHeight;

    return typingDiv.id;
}

// Remove typing indicator
function removeTypingIndicator(id) {
    const indicator = document.getElementById(id);
    if (indicator) {
        indicator.remove();
    }
}
</script>
