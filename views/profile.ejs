                            <div class="card-header-custom">
                                <h5><i class="bi bi-shield-lock"></i> Access Information</h5>
                            </div>
                            <div class="mb-4">
                                <label class="form-label text-muted small">Primary Clinic</label>
                                <div class="d-flex align-items-center p-3 bg-light rounded border border-primary bg-opacity-10">
                                    <div class="bg-primary text-white rounded p-2 me-3"><i class="bi bi-hospital-fill"></i></div>
                                    <div>
                                        <h6 class="mb-0 fw-bold text-primary" id="primaryClinic">Loading...</h6>
                                        <small class="text-muted">Main Assignment</small>
                                    </div>
                                </div>
                            </div>
                            <div id="clinicGrants">
                                <label class="form-label text-muted small">Additional Clinic Access</label>
                                <ul id="grantsList">
                                    <li>Loading...</li>
                                </ul>
                            </div>
                        </div>

                        <!-- Google Account Connection -->
                        <div class="content-card mb-4">
