<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management - RehabPlus System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Design System -->
    <link href="/public/css/variables.css" rel="stylesheet">
    <link href="/public/css/base.css" rel="stylesheet">
    <link href="/public/css/accessibility.css" rel="stylesheet">
    
    <style>
        :root {
            --theme-primary: #667eea;
            --theme-secondary: #764ba2;
            --theme-bg: #f3f6f9;
            --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.025);
            --input-bg: #f8fafc;
        }

        body {
            background-color: var(--theme-bg);
            font-family: 'Segoe UI', Roboto, 'Helvetica Neue', sans-serif;
            color: #4a5568;
            min-height: 100vh;
        }

        /* --- SIDEBAR --- */
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
            box-shadow: 2px 0 12px rgba(0, 0, 0, 0.08);
        }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.85);
            padding: 0.75rem 1rem;
            margin: 0.25rem 1rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background: rgba(255, 255, 255, 0.25);
            color: #fff;
        }

        /* --- MAIN CONTENT LAYOUT --- */
        main {
            padding-top: 2rem;
            padding-bottom: 4rem;
        }

        /* Page Header */
        .page-header {
            margin-bottom: 2.5rem;
            position: relative;
        }
        
        .page-header h1 {
            font-weight: 800;
            color: #2d3748;
            letter-spacing: -0.5px;
            font-size: 2rem;
        }

        /* Modern Cards */
        .content-card {
            background: #ffffff;
            border-radius: 1.25rem;
            border: none;
            box-shadow: var(--card-shadow);
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
            padding: 1.5rem;
        }

        .content-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 6px;
            background: linear-gradient(90deg, var(--theme-primary), var(--theme-secondary));
            opacity: 0.8;
        }

        .card-header-custom {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #f1f5f9;
        }

        .card-header-custom h5 {
            font-weight: 700;
            color: #2d3748;
            margin: 0;
            font-size: 1.25rem;
            display: flex;
            align-items: center;
        }

        .card-header-custom h5 i {
            margin-right: 12px;
            color: var(--theme-primary);
            background: rgba(102, 126, 234, 0.1);
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            font-size: 1.1rem;
        }

        /* Form Controls */
        .form-label {
            font-weight: 600;
            color: #4a5568;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            background-color: var(--input-bg);
            border: 2px solid transparent;
            border-radius: 0.75rem;
            padding: 0.6rem 1rem;
            font-size: 0.95rem;
            transition: all 0.2s ease;
        }

        .form-control:focus, .form-select:focus {
            background-color: #fff;
            border-color: var(--theme-primary);
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 0.6rem 1.5rem;
            border-radius: 0.75rem;
            font-weight: 600;
            box-shadow: 0 4px 6px rgba(102, 126, 234, 0.25);
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 7px 14px rgba(102, 126, 234, 0.3);
            color: white;
        }

        /* Tables */
        .table {
            vertical-align: middle;
        }
        
        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            color: #718096;
            border-bottom: 2px solid #e2e8f0;
            padding: 1rem;
        }
        
        .table td {
            padding: 1rem;
            border-bottom: 1px solid #f1f5f9;
            color: #4a5568;
            font-weight: 500;
        }

        /* Modals */
        .modal-content {
            border: none;
            border-radius: 1.5rem;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
            overflow: hidden;
        }

        .modal-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-bottom: none;
            padding: 1.5rem 2rem;
        }

        .modal-body {
            padding: 2rem;
        }
        
        .modal-footer {
            border-top: 1px solid #f1f5f9;
            padding: 1.5rem 2rem;
            background: #f8fafc;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar (Fixed Include Path) -->
            <%- include('../partials/sidebar', { user, activePage: 'users' }) %>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                
                <!-- Page Header -->
                <div class="page-header d-flex flex-column flex-md-row align-items-end justify-content-between border-bottom pb-3">
                    <div>
                        <h1 class="h2 mb-1">User Management</h1>
                        <span class="subtitle">Staff accounts and permissions</span>
                    </div>
                    <div class="btn-toolbar mb-2 mb-md-0 d-flex gap-2">
                        <button type="button" class="btn btn-light border" onclick="refreshData()" title="Refresh">
                            <i class="bi bi-arrow-clockwise me-1"></i> Refresh
                        </button>
                        <button type="button" class="btn btn-primary shadow-lg" onclick="showAddUserModal()">
                            <i class="bi bi-person-plus-fill me-2"></i> Add New User
                        </button>
                    </div>
                </div>

                <!-- Filter Section -->
                <div class="content-card mb-4">
                    <div class="card-header-custom">
                        <h5><i class="bi bi-funnel me-2 text-primary"></i> Filter Users</h5>
                    </div>
                    <div class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label">Role</label>
                            <select class="form-select" id="filterRole">
                                <option value="">All Roles</option>
                                <option value="ADMIN">Admin</option>
                                <option value="CLINIC">Clinic</option>
                                <option value="PT">PT</option>
                                <option value="PT_ADMIN">PT Admin</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Clinic</label>
                            <select class="form-select" id="filterClinic">
                                <option value="">All Clinics</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Status</label>
                            <select class="form-select" id="filterStatus">
                                <option value="">All Status</option>
                                <option value="1">Active</option>
                                <option value="0">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div class="d-flex gap-2">
                                <button class="btn btn-primary flex-grow-1" onclick="filterUsers()">
                                    Filter
                                </button>
                                <button class="btn btn-light border flex-grow-1" onclick="clearFilters()">
                                    Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Users Table -->
                <div class="content-card p-0">
                    <div class="card-header-custom px-4 pt-4">
                        <h5><i class="bi bi-people-fill me-2 text-primary"></i> User List</h5>
                    </div>
                    <div class="table-responsive px-4 pb-4">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Clinic</th>
                                    <th>Status</th>
                                    <th>Last Login</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="usersTableBody">
                                <tr>
                                    <td colspan="8" class="text-center py-4 text-muted">
                                        <div class="spinner-border text-primary mb-2" role="status"></div>
                                        <div>Loading users...</div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Add/Edit User Modal -->
    <div class="modal fade" id="userModal" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="userModalTitle"><i class="bi bi-person-plus me-2"></i>Add User</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="userForm">
                        <input type="hidden" id="userId">
                        
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label for="userFirstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="userFirstName" required>
                            </div>
                            <div class="col-md-6">
                                <label for="userLastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="userLastName" required>
                            </div>
                        </div>
                        
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label for="userEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="userEmail" required>
                            </div>
                            <div class="col-md-6">
                                <label for="userPassword" class="form-label">Password</label>
                                <input type="password" class="form-control" id="userPassword" minlength="6">
                                <div class="form-text small">Leave blank to keep current password</div>
                            </div>
                        </div>
                        
                        <div class="row g-3 mb-3">
                            <div class="col-md-4">
                                <label for="userRole" class="form-label">Role</label>
                                <select class="form-select" id="userRole" required>
                                    <option value="">Select Role</option>
                                    <option value="ADMIN">Admin</option>
                                    <option value="CLINIC">Clinic</option>
                                    <option value="PT">PT</option>
                                    <option value="PT_ADMIN">PT Admin</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="userClinic" class="form-label">Primary Clinic</label>
                                <select class="form-select" id="userClinic">
                                    <option value="">Select Clinic</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label for="userStatus" class="form-label">Status</label>
                                <select class="form-select" id="userStatus">
                                    <option value="1">Active</option>
                                    <option value="0">Inactive</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="userPhone" class="form-label">Phone</label>
                                <input type="tel" class="form-control" id="userPhone">
                            </div>
                            <div class="col-md-6">
                                <label for="userLicense" class="form-label">License Number</label>
                                <input type="text" class="form-control" id="userLicense" placeholder="For PTs">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light border" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary px-4" onclick="saveUser()">Save User</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Clinic Grants Modal -->
    <div class="modal fade" id="grantsModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning text-white" style="background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);">
                    <h5 class="modal-title"><i class="bi bi-building-lock me-2"></i>Manage Clinic Access</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-light rounded-circle p-3 me-3"><i class="bi bi-person-gear fs-4 text-muted"></i></div>
                        <div>
                            <h6 class="mb-0 fw-bold" id="grantsUserName">User Name</h6>
                            <small class="text-muted">Managing additional access permissions</small>
                        </div>
                    </div>
                    
                    <input type="hidden" id="grantsUserId">
                    
                    <div class="mb-4">
                        <label class="form-label fw-bold text-primary">Grant Access to:</label>
                        <div class="input-group">
                            <select class="form-select" id="grantClinicSelect">
                                <option value="">Select Clinic...</option>
                            </select>
                            <button class="btn btn-success" onclick="addGrant()">
                                <i class="bi bi-plus-lg"></i> Add
                            </button>
                        </div>
                    </div>
                    
                    <div class="bg-light rounded p-3 border">
                        <h6 class="fw-bold text-muted small text-uppercase mb-3">Current Access</h6>
                        <ul id="grantsList" class="list-group list-group-flush bg-transparent">
                            <!-- Populated by JS -->
                        </ul>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let users = [];
        let clinics = [];
        let isLoading = false;

        // Refresh all data
        async function refreshData() {
            if (isLoading) return;

            console.log('[USERS] Refreshing data...');
            await Promise.all([loadUsers(), loadClinics()]);
            console.log('[USERS] Data refreshed successfully');
        }

        async function loadUsers() {
            if (isLoading) return;
            isLoading = true;

            try {
                console.log('[USERS] Loading users from API...');
                const response = await fetch('/api/admin/users', {
                    headers: {},
                    cache: 'no-cache'
                });

                if (response.ok) {
                    users = await response.json();
                    console.log('[USERS] Loaded', users.length, 'users');
                    displayUsers(users);
                } else {
                    console.error('[USERS] Failed to load users:', response.status);
                    throw new Error('Failed to load users');
                }
            } catch (error) {
                console.error('[USERS] Error loading users:', error);
                const tbody = document.getElementById('usersTableBody');
                tbody.innerHTML = `
                    <tr>
                        <td colspan="8" class="text-center py-4 text-danger">
                            <i class="bi bi-exclamation-triangle fs-3 d-block mb-2"></i>
                            <div>Error loading users. Please refresh.</div>
                        </td>
                    </tr>
                `;
            } finally {
                isLoading = false;
            }
        }

        async function loadClinics() {
            try {
                console.log('[CLINICS] Loading clinics from API...');
                const response = await fetch('/api/clinics', {
                    headers: {},
                    cache: 'no-cache'
                });

                if (response.ok) {
                    clinics = await response.json();
                    console.log('[CLINICS] Loaded', clinics.length, 'clinics');
                    populateClinicSelects();
                } else {
                    console.error('[CLINICS] Failed to load clinics:', response.status);
                }
            } catch (error) {
                console.error('[CLINICS] Error loading clinics:', error);
            }
        }

        function populateClinicSelects() {
            const selects = ['filterClinic', 'userClinic', 'grantClinicSelect'];
            selects.forEach(selectId => {
                const select = document.getElementById(selectId);
                const currentValue = select.value;
                select.innerHTML = '<option value="">Select Clinic</option>';
                clinics.forEach(clinic => {
                    const option = document.createElement('option');
                    option.value = clinic.id;
                    option.textContent = clinic.name;
                    select.appendChild(option);
                });
                select.value = currentValue;
            });
        }

        function displayUsers(usersList) {
            const tbody = document.getElementById('usersTableBody');
            
            if (usersList.length === 0) {
                tbody.innerHTML = '<tr><td colspan="8" class="text-center py-4 text-muted">No users found</td></tr>';
                return;
            }
            
            tbody.innerHTML = usersList.map(user => `
                <tr>
                    <td><span class="badge bg-light text-dark border">${user.id}</span></td>
                    <td><div class="fw-bold">${user.first_name} ${user.last_name}</div></td>
                    <td>${user.email}</td>
                    <td><span class="badge bg-primary bg-opacity-10 text-primary border border-primary">${user.role}</span></td>
                    <td>${user.clinic_name || '<span class="text-muted fst-italic">None</span>'}</td>
                    <td>
                        <span class="badge bg-${user.active ? 'success' : 'danger'}">
                            ${user.active ? 'Active' : 'Inactive'}
                        </span>
                    </td>
                    <td class="small text-muted">${user.last_login ? formatDateTime(user.last_login) : 'Never'}</td>
                    <td>
                        <div class="btn-group">
                            <button class="btn btn-sm btn-light border" onclick="editUser(${user.id})" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-light border" onclick="showGrants(${user.id})" title="Clinic Access">
                                <i class="bi bi-building-lock text-warning"></i>
                            </button>
                            <button class="btn btn-sm btn-light border text-${user.active ? 'danger' : 'success'}" onclick="toggleUserStatus(${user.id}, ${user.active})" title="Toggle Status">
                                <i class="bi bi-${user.active ? 'slash-circle' : 'check-circle'}"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            `).join('');
        }

        function showAddUserModal() {
            document.getElementById('userModalTitle').innerHTML = '<i class="bi bi-person-plus me-2"></i>Add User';
            document.getElementById('userForm').reset();
            document.getElementById('userId').value = '';
            document.getElementById('userPassword').required = true;
            new bootstrap.Modal(document.getElementById('userModal')).show();
        }

        function editUser(userId) {
            const user = users.find(u => u.id === userId);
            if (!user) return;
            
            document.getElementById('userModalTitle').innerHTML = '<i class="bi bi-pencil-square me-2"></i>Edit User';
            document.getElementById('userId').value = user.id;
            document.getElementById('userFirstName').value = user.first_name;
            document.getElementById('userLastName').value = user.last_name;
            document.getElementById('userEmail').value = user.email;
            document.getElementById('userRole').value = user.role;
            document.getElementById('userClinic').value = user.clinic_id || '';
            document.getElementById('userStatus').value = user.active ? '1' : '0';
            document.getElementById('userPhone').value = user.phone || '';
            document.getElementById('userLicense').value = user.license_number || '';
            document.getElementById('userPassword').required = false;
            
            new bootstrap.Modal(document.getElementById('userModal')).show();
        }

        async function saveUser() {
            const userId = document.getElementById('userId').value;
            const isEdit = !!userId;
            
            const userData = {
                first_name: document.getElementById('userFirstName').value,
                last_name: document.getElementById('userLastName').value,
                email: document.getElementById('userEmail').value,
                role: document.getElementById('userRole').value,
                clinic_id: document.getElementById('userClinic').value || null,
                active: document.getElementById('userStatus').value === '1',
                phone: document.getElementById('userPhone').value,
                license_number: document.getElementById('userLicense').value
            };
            
            const password = document.getElementById('userPassword').value;
            if (password) {
                userData.password = password;
            }
            
            try {
            const url = isEdit ? `/api/admin/users/${userId}` : '/api/admin/users';
                const method = isEdit ? 'PUT' : 'POST';
                
                const response = await fetch(url, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json'                    },
                    body: JSON.stringify(userData)
                });
                
                if (response.ok) {
                    alert(`User ${isEdit ? 'updated' : 'created'} successfully!`);
                    bootstrap.Modal.getInstance(document.getElementById('userModal')).hide();
                    // Refresh data to get latest state
                    await refreshData();
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                console.error('[USERS] Save user error:', error);
                alert('Network error. Please try again.');
            }
        }

        async function toggleUserStatus(userId, currentStatus) {
            if (!confirm(`Are you sure you want to ${currentStatus ? 'deactivate' : 'activate'} this user?`)) {
                return;
            }

            try {
                const response = await fetch(`/api/admin/users/${userId}/status`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'                    },
                    body: JSON.stringify({ active: !currentStatus })
                });

                if (response.ok) {
                    console.log('[USERS] User status toggled successfully');
                    // Refresh data to get latest state
                    await refreshData();
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                console.error('[USERS] Toggle status error:', error);
                alert('Network error. Please try again.');
            }
        }

        async function showGrants(userId) {
            const user = users.find(u => u.id === userId);
            if (!user) return;
            
            document.getElementById('grantsUserName').textContent = `${user.first_name} ${user.last_name}`;
            document.getElementById('grantsUserId').value = userId;
            
            await loadUserGrants(userId);
            new bootstrap.Modal(document.getElementById('grantsModal')).show();
        }

        async function loadUserGrants(userId) {
            try {
                const response = await fetch(`/api/admin/users/${userId}/grants`, {
                    headers: {}
                });
                
                if (response.ok) {
                    const grants = await response.json();
                    displayGrants(grants);
                }
            } catch (error) {
                console.error('Error loading grants:', error);
            }
        }

        function displayGrants(grants) {
            const grantsList = document.getElementById('grantsList');
            
            if (grants.length === 0) {
                grantsList.innerHTML = '<li class="list-group-item bg-transparent text-muted small fst-italic text-center">No additional access granted</li>';
                return;
            }
            
            grantsList.innerHTML = grants.map(grant => `
                <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center px-0">
                    <span><i class="bi bi-check-circle-fill text-success me-2"></i>${grant.clinic_name}</span>
                    <button class="btn btn-sm btn-outline-danger border-0" onclick="removeGrant(${grant.user_id}, ${grant.clinic_id})" title="Revoke Access">
                        <i class="bi bi-trash"></i>
                    </button>
                </li>
            `).join('');
        }

        async function addGrant() {
            const userId = document.getElementById('grantsUserId').value;
            const clinicId = document.getElementById('grantClinicSelect').value;
            
            if (!clinicId) {
                alert('Please select a clinic');
                return;
            }
            
            try {
                const response = await fetch('/api/admin/grants', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'                    },
                    body: JSON.stringify({ user_id: userId, clinic_id: clinicId })
                });
                
                if (response.ok) {
                    console.log('[GRANTS] Grant added successfully');
                    document.getElementById('grantClinicSelect').value = '';
                    await loadUserGrants(userId);
                    // Refresh user data to sync state
                    await loadUsers();
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                console.error('[GRANTS] Add grant error:', error);
                alert('Network error. Please try again.');
            }
        }

        async function removeGrant(userId, clinicId) {
            if (!confirm('Remove this clinic access?')) return;

            try {
                const response = await fetch(`/api/admin/grants/${userId}/${clinicId}`, {
                    method: 'DELETE',
                    headers: {}
                });

                if (response.ok) {
                    console.log('[GRANTS] Grant removed successfully');
                    await loadUserGrants(userId);
                    // Refresh user data to sync state
                    await loadUsers();
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                console.error('[GRANTS] Remove grant error:', error);
                alert('Network error. Please try again.');
            }
        }

        function filterUsers() {
            const role = document.getElementById('filterRole').value;
            const clinicId = document.getElementById('filterClinic').value;
            const status = document.getElementById('filterStatus').value;
            
            let filtered = users;
            
            if (role) {
                filtered = filtered.filter(u => u.role === role);
            }
            if (clinicId) {
                filtered = filtered.filter(u => u.clinic_id == clinicId);
            }
            if (status !== '') {
                filtered = filtered.filter(u => u.active == (status === '1'));
            }
            
            displayUsers(filtered);
        }

        function clearFilters() {
            document.getElementById('filterRole').value = '';
            document.getElementById('filterClinic').value = '';
            document.getElementById('filterStatus').value = '';
            displayUsers(users);
        }

        function formatDateTime(date) {
            return new Date(date).toLocaleString('en-GB');
        }

        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
        }

        function logout() {
            document.cookie = 'authToken=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
            localStorage.clear();
            window.location.href = '/login';
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', async () => {
            console.log('[USERS] Initializing user management page...');

            // Initial load
            await refreshData();

            // Auto-refresh every 30 seconds to keep state in sync
            setInterval(() => {
                if (!isLoading && !document.querySelector('.modal.show')) {
                    console.log('[USERS] Auto-refreshing data...');
                    refreshData();
                }
            }, 30000);

            console.log('[USERS] Initialization complete');
        });
    </script>
