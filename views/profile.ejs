    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let userData = null;

        async function loadProfile() {
            try {
                const response = await fetch('/api/auth/me', {
                    headers: {}
                });

                if (response.ok) {
                    userData = await response.json();
                    displayProfile();
                    // Load 2FA status after user data is loaded
                    await load2FAStatus();
                } else if (response.status === 401) {
                    window.location.href = '/login';
                }
            } catch (error) {
                console.error('Error loading profile:', error);
            }
        }

        function displayProfile() {
            // Header
            document.getElementById('profileName').textContent = `${userData.first_name} ${userData.last_name}`;
            document.getElementById('profileRole').textContent = userData.role;
            document.getElementById('profileEmail').textContent = userData.email;

            // Update localStorage with latest user data
            localStorage.setItem('user', JSON.stringify(userData));

            // Profile Avatar - Show Google picture if available
            if (userData.google_picture) {
                const avatarIcon = document.getElementById('profileAvatarIcon');
                const avatarImage = document.getElementById('profileAvatarImage');
                if (avatarIcon && avatarImage) {
                    avatarIcon.style.display = 'none';
                    avatarImage.src = userData.google_picture;
                    avatarImage.style.display = 'block';
                }
            } else {
                // No Google picture - show default icon
                const avatarIcon = document.getElementById('profileAvatarIcon');
                const avatarImage = document.getElementById('profileAvatarImage');
                if (avatarIcon && avatarImage) {
                    avatarIcon.style.display = 'block';
                    avatarImage.style.display = 'none';
                }
            }

            // Refresh header profile picture
            if (typeof loadHeaderProfilePicture === 'function') {
                loadHeaderProfilePicture();
            }
            
            // Form fields
            document.getElementById('firstName').value = userData.first_name || '';
            document.getElementById('lastName').value = userData.last_name || '';
            document.getElementById('email').value = userData.email || '';
            document.getElementById('phone').value = userData.phone || '';
            document.getElementById('licenseNumber').value = userData.license_number || '';
            
            // Hide license number field if not PT
            if (userData.role !== 'PT' && userData.role !== 'PT_ADMIN') {
                document.getElementById('licenseNumber').parentElement.style.display = 'none';
            }
            
            // Clinic information
            document.getElementById('primaryClinic').textContent = userData.clinic_name || 'Not assigned';
            
            // Clinic grants
            if (userData.clinic_grants && userData.clinic_grants.length > 0) {
                const grantsList = document.getElementById('grantsList');
                grantsList.innerHTML = userData.clinic_grants.map(grant => 
                    `<li>${grant.clinic_name}</li>`
                ).join('');
            } else {
                document.getElementById('clinicGrants').style.display = 'none';
            }
            
            // Member since (Optional display if data available)
            if(userData.created_at) {
                const date = new Date(userData.created_at);
                document.getElementById('memberSince').textContent = date.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
            }
        }

        // Update profile
        document.getElementById('profileForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const updateData = {
                first_name: document.getElementById('firstName').value,
                last_name: document.getElementById('lastName').value,
                phone: document.getElementById('phone').value,
                license_number: document.getElementById('licenseNumber').value
            };
            
            try {
                const response = await fetch('/api/auth/update-profile', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'                    },
                    body: JSON.stringify(updateData)
                });
                
                if (response.ok) {
                    alert('Profile updated successfully!');
                    loadProfile();
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                alert('Network error. Please try again.');
            }
        });

        // Change password
        document.getElementById('passwordForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (newPassword !== confirmPassword) {
                alert('New passwords do not match!');
                return;
            }
            
            const passwordData = {
                current_password: document.getElementById('currentPassword').value,
                new_password: newPassword
            };
            
            try {
                const response = await fetch('/api/auth/change-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'                    },
                    body: JSON.stringify(passwordData)
                });
                
                if (response.ok) {
                    alert('Password changed successfully!');
                    document.getElementById('passwordForm').reset();
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                alert('Network error. Please try again.');
            }
        });

        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
        }

        function logout() {
            document.cookie = 'authToken=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
            localStorage.clear();
            window.location.href = '/login';
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            loadProfile();
        });

        // ===== TWO-FACTOR AUTHENTICATION =====
        let currentTotpSecret = null;

        async function load2FAStatus() {
            // Only show 2FA for ADMIN and PT roles
            if (!userData || (userData.role !== 'ADMIN' && userData.role !== 'PT')) {
                document.getElementById('twoFactorCard').style.display = 'none';
                return;
            }

            document.getElementById('twoFactorCard').style.display = 'block';

            try {
                const response = await fetch('/api/auth/2fa/status');
                if (response.ok) {
                    const data = await response.json();
                    display2FAStatus(data);
                }
            } catch (error) {
                console.error('Error loading 2FA status:', error);
            }
        }

        function display2FAStatus(data) {
            if (data.enabled) {
                // 2FA is enabled
                document.getElementById('twoFactorDisabled').style.display = 'none';
                document.getElementById('twoFactorEnabled').style.display = 'block';
                document.getElementById('twoFactorActions').style.display = 'none';
                document.getElementById('twoFactorManage').style.display = 'block';

                if (data.enabledAt) {
                    const date = new Date(data.enabledAt);
                    document.getElementById('twoFactorEnabledAt').textContent =
                        date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
                }
            } else {
                // 2FA is disabled
                document.getElementById('twoFactorDisabled').style.display = 'block';
                document.getElementById('twoFactorEnabled').style.display = 'none';
                document.getElementById('twoFactorActions').style.display = 'block';
                document.getElementById('setupTwoFactorBtn').style.display = 'inline-block';
                document.getElementById('twoFactorManage').style.display = 'none';
            }
        }

        // Setup 2FA
        document.getElementById('setupTwoFactorBtn')?.addEventListener('click', async () => {
            try {
                const response = await fetch('/api/auth/2fa/setup', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                if (response.ok) {
                    const data = await response.json();
                    currentTotpSecret = data.secret;

                    // Display QR code
                    document.getElementById('qrCodeDisplay').innerHTML =
                        `<img src="${data.qrCode}" alt="QR Code" class="img-fluid" style="max-width: 250px;">`;
                    document.getElementById('totpSecret').textContent = data.secret;

                    // Show enable flow
                    document.getElementById('twoFactorStatus').style.display = 'none';
                    document.getElementById('twoFactorActions').style.display = 'none';
                    document.getElementById('enableTwoFactorFlow').style.display = 'block';
                } else {
                    const error = await response.json();
                    alert(error.error || 'Failed to setup 2FA');
                }
            } catch (error) {
                console.error('2FA setup error:', error);
                alert('Network error. Please try again.');
            }
        });

        // Confirm enable 2FA
        document.getElementById('confirmEnable2FABtn')?.addEventListener('click', async () => {
            const code = document.getElementById('verifyTotpCode').value.trim();

            if (!code || code.length !== 6) {
                alert('Please enter a valid 6-digit code');
                return;
            }

            try {
                const response = await fetch('/api/auth/2fa/enable', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ token: code })
                });

                if (response.ok) {
                    const data = await response.json();

                    // Display backup codes
                    document.getElementById('backupCodesList').textContent =
                        data.backupCodes.join('\n');

                    // Hide enable flow, show backup codes
                    document.getElementById('enableTwoFactorFlow').style.display = 'none';
                    document.getElementById('backupCodesDisplay').style.display = 'block';
                } else {
                    const error = await response.json();
                    alert(error.error || 'Invalid verification code');
                }
            } catch (error) {
                console.error('2FA enable error:', error);
                alert('Network error. Please try again.');
            }
        });

        // Acknowledge backup codes
        document.getElementById('acknowledgeBackupCodesBtn')?.addEventListener('click', () => {
            // Reset view and reload status
            document.getElementById('backupCodesDisplay').style.display = 'none';
            document.getElementById('twoFactorStatus').style.display = 'block';
            document.getElementById('verifyTotpCode').value = '';
            currentTotpSecret = null;

            alert('✅ Two-Factor Authentication is now enabled!');
            load2FAStatus();
        });

        // Cancel enable 2FA
        document.getElementById('cancelEnable2FABtn')?.addEventListener('click', () => {
            document.getElementById('enableTwoFactorFlow').style.display = 'none';
            document.getElementById('twoFactorStatus').style.display = 'block';
            document.getElementById('twoFactorActions').style.display = 'block';
            document.getElementById('verifyTotpCode').value = '';
            currentTotpSecret = null;
        });

        // Regenerate backup codes
        document.getElementById('regenerateBackupCodesBtn')?.addEventListener('click', async () => {
            const code = prompt('Enter a verification code from your Google Authenticator app:');

            if (!code || code.length !== 6) {
                alert('Invalid code');
                return;
            }

            try {
                const response = await fetch('/api/auth/2fa/regenerate-backup-codes', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ token: code })
                });

                if (response.ok) {
                    const data = await response.json();

                    // Display new backup codes
                    document.getElementById('backupCodesList').textContent =
                        data.backupCodes.join('\n');

                    // Show backup codes display
                    document.getElementById('twoFactorStatus').style.display = 'none';
                    document.getElementById('twoFactorManage').style.display = 'none';
                    document.getElementById('backupCodesDisplay').style.display = 'block';
                } else {
                    const error = await response.json();
                    alert(error.error || 'Failed to regenerate backup codes');
                }
            } catch (error) {
                console.error('Regenerate backup codes error:', error);
                alert('Network error. Please try again.');
            }
        });

        // Disable 2FA
        document.getElementById('disableTwoFactorBtn')?.addEventListener('click', async () => {
            if (!confirm('Are you sure you want to disable Two-Factor Authentication? This will make your account less secure.')) {
                return;
            }

            const password = prompt('Enter your password to confirm:');

            if (!password) {
                alert('Password is required');
                return;
            }

            const code = prompt('Enter a verification code from your Google Authenticator app (optional):');

            try {
                const response = await fetch('/api/auth/2fa/disable', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ password, token: code || undefined })
                });

                if (response.ok) {
                    alert('✅ Two-Factor Authentication has been disabled');
                    load2FAStatus();
                } else {
                    const error = await response.json();
                    alert(error.error || 'Failed to disable 2FA');
                }
            } catch (error) {
                console.error('Disable 2FA error:', error);
                alert('Network error. Please try again.');
            }
        });

        // ===== GOOGLE OAUTH INTEGRATION =====
        async function loadGoogleStatus() {
            try {
                const response = await fetch('/api/google/status');
                if (response.ok) {
                    const data = await response.json();
                    displayGoogleStatus(data);
                } else {
                    console.warn('Google status API not available (404). Showing default state.');
                    // Show not connected state as default when API is not available
                    displayGoogleStatus({ connected: false });
                }
            } catch (error) {
                console.error('Error loading Google status:', error);
                // Show not connected state as default on error
                displayGoogleStatus({ connected: false });
            }
        }

        function displayGoogleStatus(data) {
            if (data.connected) {
                // Google is connected
                document.getElementById('googleNotConnected').style.display = 'none';
                document.getElementById('googleConnected').style.display = 'block';

                // Display Google profile info
                if (data.googleName) {
                    document.getElementById('googleProfileName').textContent = data.googleName;
                }
                if (data.googleEmail) {
                    document.getElementById('googleProfileEmail').textContent = data.googleEmail;
                    document.getElementById('googleConnectedEmail').textContent = data.googleEmail;
                }
                if (data.googlePicture) {
                    const picElement = document.getElementById('googleProfilePicture');
                    picElement.src = data.googlePicture;
                    picElement.style.display = 'block';
                }
                if (data.connectedAt) {
                    const date = new Date(data.connectedAt);
                    document.getElementById('googleConnectedAt').textContent =
                        date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
                }
            } else {
                // Google is not connected
                document.getElementById('googleNotConnected').style.display = 'block';
                document.getElementById('googleConnected').style.display = 'none';
            }
        }

        // Connect Google Account
        document.getElementById('connectGoogleBtn')?.addEventListener('click', async () => {
            try {
                const response = await fetch('/api/google/auth-url');
                if (response.ok) {
                    const data = await response.json();
                    // Redirect to Google OAuth page
                    window.location.href = data.authUrl;
                } else {
                    alert('Failed to initiate Google connection');
                }
            } catch (error) {
                console.error('Google connection error:', error);
                alert('Network error. Please try again.');
            }
        });

        // Disconnect Google Account
        document.getElementById('disconnectGoogleBtn')?.addEventListener('click', async () => {
            if (!confirm('Are you sure you want to disconnect your Google account?')) {
                return;
            }

            try {
                const response = await fetch('/api/google/disconnect', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                if (response.ok) {
                    alert('✅ Google account disconnected successfully');
                    // Reload Google status and user profile to update avatar
                    await loadProfile();
                    loadGoogleStatus();
                } else {
                    const error = await response.json();
                    alert('Error: ' + error.error);
                }
            } catch (error) {
                console.error('Google disconnect error:', error);
                alert('Network error. Please try again.');
            }
        });

        // Load Google status on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadProfile();
            loadGoogleStatus();
        });

        // Handle OAuth callback success/error messages
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('success') === 'google_connected') {
            alert('✅ Google account connected successfully!');
            // Reload profile to get updated Google data
            setTimeout(() => {
                loadProfile();
                loadGoogleStatus();
            }, 500);
            // Remove query params from URL
            window.history.replaceState({}, document.title, '/profile');
        } else if (urlParams.get('error') === 'google_auth_failed') {
            alert('❌ Google authentication failed. Please try again.');
            window.history.replaceState({}, document.title, '/profile');
        } else if (urlParams.get('error') === 'google_account_already_linked') {
            alert('❌ This Google account is already linked to another user.');
            window.history.replaceState({}, document.title, '/profile');
        }
    </script>
